<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="28dp"
    android:background="#FFFFFF">

    <ImageView
        android:id="@+id/search_search_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/search_search_text"
        android:layout_marginTop="30dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/search_input_edit_text"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="@string/search_keyword"
        android:background="@drawable/login_ap_background"
        android:textColor="@color/black"
        android:layout_marginTop="58dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toBottomOf="@id/search_search_text"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:id="@+id/search_all_result_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/search_all_results_text"
        android:layout_marginTop="30dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@+id/search_input_edit_text"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>