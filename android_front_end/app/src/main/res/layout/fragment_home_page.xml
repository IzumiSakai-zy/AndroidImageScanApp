<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/home_page_discover"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/home_page_discover"
        android:layout_marginTop="30dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/home_page_your_last_scanned_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/home_page_your_last_scanned_result"
        android:layout_marginTop="35dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@+id/home_page_discover"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/home_page_scanned_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/home_page_scanned_image"
        android:layout_marginTop="25dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        app:layout_constraintTop_toBottomOf="@+id/home_page_your_last_scanned_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/home_page_scanned_bottom_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/home_page_scanned_bottom_icon"
        android:layout_marginTop="20dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@+id/home_page_scanned_image"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/home_page_predicted_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:maxLines="5"
        android:textColor="@color/black"
        android:text="@string/main_page_predicted_result"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/home_page_scanned_bottom_icon"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>