<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/history_recycle_item"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_marginBottom="6dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="12dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/history_item_image"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:scaleType="fitCenter"/>

    <LinearLayout
        android:id="@+id/history_text_group"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:layout_marginStart="15dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/history_item_result_text"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:gravity="bottom"
            android:layout_gravity="center_vertical"
            android:text="@string/main_page_predicted_result"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:maxLines="1"/>

        <TextView
            android:id="@+id/history_item_result_type"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginTop="5dp"
            android:layout_gravity="center_vertical"
            android:text="@string/type_classification"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:maxLines="1"/>
    </LinearLayout>


    <ImageView
        android:id="@+id/history_see_more_point"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_gravity="center_vertical"
        android:src="@drawable/history_see_more_point"/>

</LinearLayout>