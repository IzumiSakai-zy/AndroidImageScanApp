<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.LoginFragment">

    <ImageView
        android:id="@+id/login_back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/login_back_icon"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/login_head_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/login_head_text"
        android:layout_marginTop="35dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@id/login_back_button"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/login_account"
        android:layout_width="343dp"
        android:layout_height="52dp"
        android:layout_marginTop="68dp"
        android:text="@string/login_account"
        android:background="@drawable/login_ap_background"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@id/login_head_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
        android:id="@+id/login_password"
        android:layout_width="343dp"
        android:layout_height="52dp"
        android:layout_marginTop="10dp"
        android:inputType="textPassword"
        android:text="@string/login_password"
        android:textColor="#000000"
        android:background="@drawable/login_ap_background"
        app:layout_constraintTop_toBottomOf="@id/login_account"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/login_login_button"
        android:layout_width="343dp"
        android:layout_height="52dp"
        android:layout_marginTop="42dp"
        android:src="@drawable/login_button"
        app:layout_constraintTop_toBottomOf="@id/login_password"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>